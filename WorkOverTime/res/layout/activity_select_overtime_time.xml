    <!-- 加班工资/休假类型 -->

    <RelativeLayout
        android:id="@+id/select_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/checkbox"
        android:onClick="clickView" >

        <TextView
            android:id="@+id/tv_type_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="加班工资"
            android:textColor="#ff000000" />

        <ImageView
            android:id="@+id/detail_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/detail_arrow_right" />

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/detail_arrow_right"
            android:text="0元/小时\n2.0倍"
            android:textColor="#ff000000" />
    </RelativeLayout>
    <!-- 备注 -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/checkbox"
        android:text="备注" />

    <!-- 取消|保存 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_num_select_dn_bg"
            android:gravity="center"
            android:onClick="clickView"
            android:text="取消"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_num_select_prsd_bg"
            android:gravity="center"
            android:onClick="clickView"
            android:text="保存"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>